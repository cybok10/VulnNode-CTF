<%- include('partials/header') %>

<div class="mb-3">
    <a href="/support" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Back to Tickets
    </a>
</div>

<div class="card bg-dark border-primary">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0" id="ticketSubject">Loading...</h4>
    </div>
    <div class="card-body" id="ticketDetails">
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-3">Loading ticket...</p>
        </div>
    </div>
</div>

<!-- Reply Section -->
<div class="card bg-dark border-secondary mt-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fa-solid fa-reply"></i> Add Reply</h5>
    </div>
    <div class="card-body">
        <form id="replyForm" onsubmit="submitReply(event)">
            <div class="mb-3">
                <textarea class="form-control" id="replyMessage" rows="4" placeholder="Type your message..." required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-paper-plane"></i> Send Reply
            </button>
        </form>
    </div>
</div>

<script>
const ticketId = <%= ticket_id %>;

function loadTicket() {
    // VULNERABILITY: IDOR - Can view any ticket by changing ID
    fetch(`/api/support/${ticketId}`)
        .then(res => res.json())
        .then(data => {
            displayTicket(data);
        })
        .catch(err => {
            document.getElementById('ticketDetails').innerHTML = `
                <div class="alert alert-danger">Failed to load ticket or access denied</div>
            `;
        });
}

function displayTicket(ticket) {
    document.getElementById('ticketSubject').textContent = ticket.subject;
    
    const statusBadge = {
        'open': 'success',
        'pending': 'warning',
        'closed': 'secondary',
        'resolved': 'info'
    }[ticket.status] || 'secondary';
    
    const priorityBadge = {
        'low': 'info',
        'normal': 'primary',
        'high': 'warning',
        'urgent': 'danger'
    }[ticket.priority] || 'secondary';
    
    let html = `
        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Ticket ID:</strong> #${ticket.id}</p>
                <p><strong>Category:</strong> ${ticket.category || 'N/A'}</p>
                <p><strong>Created:</strong> ${new Date(ticket.created_at).toLocaleString()}</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p><span class="badge bg-${statusBadge}">${ticket.status}</span></p>
                <p><span class="badge bg-${priorityBadge}">${ticket.priority}</span></p>
            </div>
        </div>
        <hr>
        <div class="mb-4">
            <h6>Original Message:</h6>
            <div class="p-3 bg-dark border border-secondary rounded">
                ${ticket.message}
            </div>
        </div>
    `;
    
    if (ticket.messages && ticket.messages.length > 0) {
        html += '<h6 class="mb-3">Conversation:</h6>';
        ticket.messages.forEach(msg => {
            const isStaff = msg.is_staff_reply;
            html += `
                <div class="mb-3 ${isStaff ? 'ms-5' : 'me-5'}">
                    <div class="card ${isStaff ? 'bg-primary' : 'bg-secondary'} bg-opacity-25">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <strong>${isStaff ? 'üõ°Ô∏è Support Team' : 'üë§ You'}</strong>
                                <small class="text-muted">${new Date(msg.created_at).toLocaleString()}</small>
                            </div>
                            <p class="mb-0">${msg.message}</p>
                        </div>
                    </div>
                </div>
            `;
        });
    }
    
    document.getElementById('ticketDetails').innerHTML = html;
}

function submitReply(e) {
    e.preventDefault();
    
    const message = document.getElementById('replyMessage').value;
    
    fetch(`/api/support/${ticketId}/reply`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ message: message })
    })
    .then(res => res.json())
    .then(data => {
        if (data.message) {
            document.getElementById('replyMessage').value = '';
            loadTicket(); // Reload to show new message
        } else {
            alert('Error: ' + (data.error || 'Failed to send reply'));
        }
    });
}

document.addEventListener('DOMContentLoaded', loadTicket);
</script>

