<%- include('layout', { body: '' }) %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title mt-2">Create Account</h4>
            </header>
            <article class="card-body">
                
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <form action="/auth/register" method="POST">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" name="username" class="form-control" placeholder="bob">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" placeholder="bob@example.com">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" placeholder="******">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block"> Register  </button>
                    </div>      
                    <small class="text-muted">By clicking Register, you agree to our intentionally insecure Terms of Service.</small>                                                     
                </form>
            </article> 
            <div class="border-top card-body text-center">Have an account? <a href="/auth/login">Log In</a></div>
        </div> 
    </div> 
</div>