<%- include('partials/header') %>

<div class="row">
    <div class="col-md-4">
        <div class="card text-center mb-4">
            <div class="card-body">
                <img src="<%= user.avatar %>" class="profile-avatar rounded-circle mb-3" alt="User Avatar">
                <h3 class="card-title"><%= user.username %></h3>
                <p class="text-muted"><%= user.email %></p>
                <div class="d-grid gap-2">
                    <button class="btn btn-warning" type="button">Balance: $<%= user.balance.toFixed(2) %></button>
                </div>
            </div>
        </div>

        <% if (typeof userPrefs !== 'undefined' && Object.keys(userPrefs).length > 0) { %>
            <div class="card mb-4 border-danger">
                <div class="card-header text-danger"><i class="fa-solid fa-gear"></i> Dev Debug: Preferences</div>
                <div class="card-body">
                    <small class="text-muted">Parsed from 'user_prefs' cookie:</small>
                    <pre class="text-warning mt-2"><%= JSON.stringify(userPrefs, null, 2) %></pre>
                </div>
            </div>
        <% } %>
    </div>

    <div class="col-md-8">
        
        <div class="card mb-4">
            <div class="card-header bg-dark border-bottom border-secondary">
                <h5 class="mb-0 text-primary"><i class="fa-solid fa-cloud-arrow-down"></i> Import Avatar</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Import an avatar from a remote URL.</p>
                <form action="/user/import-avatar" method="POST">
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-secondary border-secondary text-white">URL</span>
                        <input type="text" class="form-control" name="imageUrl" placeholder="http://example.com/image.png">
                        <button class="btn btn-primary" type="submit">Import</button>
                    </div>
                </form>
                <small class="text-danger">* This server will fetch the URL directly.</small>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-dark border-bottom border-secondary">
                <h5 class="mb-0 text-info"><i class="fa-solid fa-code"></i> Developer API</h5>
            </div>
            <div class="card-body">
                <p>Your User ID is <strong><%= user.id %></strong>.</p>
                <p>You can retrieve your raw data via: <code class="text-warning">GET /api/users/<%= user.id %></code></p>
                <a href="/api/users/<%= user.id %>" target="_blank" class="btn btn-sm btn-outline-info">Test API</a>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>