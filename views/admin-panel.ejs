<%- include('partials/header') %>

<h1 class="text-warning mb-4">
    <i class="fa-solid fa-crown"></i> Admin Panel
</h1>

<div class="row g-4">
    <!-- User Management -->
    <div class="col-md-6 col-lg-4">
        <div class="card bg-dark border-warning">
            <div class="card-body text-center">
                <i class="fa-solid fa-users fa-3x text-warning mb-3"></i>
                <h4>User Management</h4>
                <p class="text-muted">View and manage all users</p>
                <a href="/admin/users" class="btn btn-warning">
                    <i class="fa-solid fa-arrow-right"></i> Manage Users
                </a>
            </div>
        </div>
    </div>
    
    <!-- Support Tickets -->
    <div class="col-md-6 col-lg-4">
        <div class="card bg-dark border-info">
            <div class="card-body text-center">
                <i class="fa-solid fa-ticket fa-3x text-info mb-3"></i>
                <h4>Support Tickets</h4>
                <p class="text-muted">View all support tickets</p>
                <a href="/admin/tickets" class="btn btn-info">
                    <i class="fa-solid fa-arrow-right"></i> View Tickets
                </a>
            </div>
        </div>
    </div>
    
    <!-- System Info -->
    <div class="col-md-6 col-lg-4">
        <div class="card bg-dark border-danger">
            <div class="card-body text-center">
                <i class="fa-solid fa-server fa-3x text-danger mb-3"></i>
                <h4>System Information</h4>
                <p class="text-muted">Server stats and diagnostics</p>
                <a href="/admin/system" class="btn btn-danger">
                    <i class="fa-solid fa-arrow-right"></i> System Info
                </a>
            </div>
        </div>
    </div>
    
    <!-- Logs Viewer -->
    <div class="col-md-6 col-lg-4">
        <div class="card bg-dark border-success">
            <div class="card-body text-center">
                <i class="fa-solid fa-file-lines fa-3x text-success mb-3"></i>
                <h4>System Logs</h4>
                <p class="text-muted">View application logs</p>
                <a href="/admin/logs" class="btn btn-success">
                    <i class="fa-solid fa-arrow-right"></i> View Logs
                </a>
            </div>
        </div>
    </div>
    
    <!-- Database -->
    <div class="col-md-6 col-lg-4">
        <div class="card bg-dark border-primary">
            <div class="card-body text-center">
                <i class="fa-solid fa-database fa-3x text-primary mb-3"></i>
                <h4>Database</h4>
                <p class="text-muted">Database management</p>
                <button class="btn btn-primary" disabled>
                    <i class="fa-solid fa-lock"></i> Coming Soon
                </button>
            </div>
        </div>
    </div>
    
    <!-- Settings -->
    <div class="col-md-6 col-lg-4">
        <div class="card bg-dark border-secondary">
            <div class="card-body text-center">
                <i class="fa-solid fa-cog fa-3x text-secondary mb-3"></i>
                <h4>Settings</h4>
                <p class="text-muted">Application settings</p>
                <button class="btn btn-secondary" disabled>
                    <i class="fa-solid fa-lock"></i> Coming Soon
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card bg-dark border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fa-solid fa-chart-line"></i> Quick Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center" id="statsContainer">
                    <div class="col-md-3">
                        <div class="spinner-border text-primary"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
fetch('/api/admin/stats')
    .then(res => res.json())
    .then(data => {
        document.getElementById('statsContainer').innerHTML = `
            <div class="col-md-3">
                <h2 class="text-primary">${data.total_users || 0}</h2>
                <p class="text-muted">Total Users</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-success">${data.total_orders || 0}</h2>
                <p class="text-muted">Total Orders</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-warning">${data.open_tickets || 0}</h2>
                <p class="text-muted">Open Tickets</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-info">${data.total_products || 0}</h2>
                <p class="text-muted">Products</p>
            </div>
        `;
    })
    .catch(() => {
        document.getElementById('statsContainer').innerHTML = '<p class="text-danger">Failed to load stats</p>';
    });
</script>

<%- include('partials/footer') %>