<%- include('partials/header') %>

<h1 class="text-primary mb-4">
    <i class="fa-solid fa-box"></i> My Orders
</h1>

<div class="row">
    <div class="col-12">
        <div class="card bg-dark border-secondary">
            <div class="card-body" id="ordersContainer">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Loading orders...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function loadOrders() {
    fetch('/api/checkout/orders')
        .then(res => res.json())
        .then(data => {
            displayOrders(data.orders || []);
        })
        .catch(err => {
            document.getElementById('ordersContainer').innerHTML = `
                <div class="alert alert-danger">Failed to load orders</div>
            `;
        });
}

function displayOrders(orders) {
    const container = document.getElementById('ordersContainer');
    
    if (!orders || orders.length === 0) {
        container.innerHTML = `
            <div class="text-center py-5">
                <i class="fa-solid fa-box-open fa-4x text-muted mb-3"></i>
                <h4>No orders yet</h4>
                <p class="text-muted">Start shopping to see your orders here</p>
                <a href="/" class="btn btn-primary">Continue Shopping</a>
            </div>
        `;
        return;
    }
    
    let html = '<div class="table-responsive">';
    html += '<table class="table table-dark table-hover">';
    html += '<thead><tr><th>Order #</th><th>Date</th><th>Items</th><th>Total</th><th>Status</th><th>Actions</th></tr></thead>';
    html += '<tbody>';
    
    orders.forEach(order => {
        const statusBadge = {
            'pending': 'warning',
            'processing': 'info',
            'shipped': 'primary',
            'delivered': 'success',
            'cancelled': 'danger'
        }[order.order_status] || 'secondary';
        
        html += `
            <tr>
                <td><strong>${order.order_number}</strong></td>
                <td>${new Date(order.created_at).toLocaleDateString()}</td>
                <td>${order.item_count || 0} items</td>
                <td><strong>$${order.total_amount.toFixed(2)}</strong></td>
                <td><span class="badge bg-${statusBadge}">${order.order_status}</span></td>
                <td>
                    <a href="/checkout/confirmation/${order.order_number}" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-eye"></i> View
                    </a>
                </td>
            </tr>
        `;
    });
    
    html += '</tbody></table></div>';
    container.innerHTML = html;
}

document.addEventListener('DOMContentLoaded', loadOrders);
</script>

<%- include('partials/footer') %>