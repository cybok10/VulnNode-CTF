<%- include('partials/header') %>

<div class="p-5 mb-4 bg-dark border border-secondary rounded-3 text-center">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold text-primary">Welcome to VulnNode</h1>
        <p class="col-md-8 fs-4 mx-auto text-muted">The safest place to buy developer tools and hacker gadgets. (Definitely not vulnerable).</p>
        <a href="#products" class="btn btn-outline-primary btn-lg">Shop Now</a>
    </div>
</div>

<div id="products" class="row row-cols-1 row-cols-md-3 g-4">
    <% if (products.length > 0) { %>
        <% products.forEach(function(product) { %>
            <div class="col">
                <div class="card h-100">
                    <img src="<%= product.image %>" class="card-img-top p-3" alt="<%= product.name %>" style="height: 200px; object-fit: contain;">
                    <div class="card-body border-top border-secondary">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text text-muted"><%= product.description %></p>
                        <h4 class="text-white">$<%= product.price %></h4>
                    </div>
                    <div class="card-footer border-secondary bg-transparent d-grid">
                        <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12 text-center text-muted">
            <h3>No products found.</h3>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>