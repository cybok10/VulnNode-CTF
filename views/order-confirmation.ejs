<%- include('partials/header') %>

<div class="text-center my-5">
    <i class="fa-solid fa-circle-check fa-5x text-success mb-4"></i>
    <h1 class="text-success mb-3">Order Placed Successfully!</h1>
    <p class="lead text-muted">Thank you for your purchase</p>
    <p class="h3 text-primary mb-4">Order #<span id="orderNumber"><%= order_number %></span></p>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card bg-dark border-success">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fa-solid fa-file-invoice"></i> Order Details</h5>
            </div>
            <div class="card-body" id="orderDetails">
                <div class="text-center py-5">
                    <div class="spinner-border text-success"></div>
                    <p class="mt-3">Loading order details...</p>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary me-2">
                <i class="fa-solid fa-shopping-bag"></i> Continue Shopping
            </a>
            <a href="/orders" class="btn btn-outline-secondary">
                <i class="fa-solid fa-box"></i> View All Orders
            </a>
        </div>
    </div>
</div>

<script>
const orderNumber = '<%= order_number %>';

function loadOrderDetails() {
    // VULNERABILITY: IDOR - No authentication check on order access
    fetch(`/api/checkout/order/${orderNumber}`)
        .then(res => res.json())
        .then(data => {
            displayOrder(data);
        })
        .catch(err => {
            document.getElementById('orderDetails').innerHTML = `
                <div class="alert alert-danger">Failed to load order details</div>
            `;
        });
}

function displayOrder(order) {
    let html = `
        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Order Number:</strong> ${order.order_number}</p>
                <p><strong>Date:</strong> ${new Date(order.created_at).toLocaleString()}</p>
                <p><strong>Status:</strong> <span class="badge bg-primary">${order.order_status}</span></p>
            </div>
            <div class="col-md-6 text-md-end">
                <p><strong>Payment:</strong> ${order.payment_method}</p>
                <p><strong>Payment Status:</strong> <span class="badge bg-success">${order.payment_status}</span></p>
                <p><strong>Total:</strong> <span class="h4 text-success">$${order.total_amount.toFixed(2)}</span></p>
            </div>
        </div>
        <hr>
    `;
    
    if (order.items && order.items.length > 0) {
        html += '<h6 class="mb-3">Items</h6>';
        html += '<div class="table-responsive"><table class="table table-dark"><thead><tr><th>Product</th><th>Qty</th><th>Price</th><th>Total</th></tr></thead><tbody>';
        
        order.items.forEach(item => {
            html += `
                <tr>
                    <td>${item.product_name}</td>
                    <td>${item.quantity}</td>
                    <td>$${item.unit_price.toFixed(2)}</td>
                    <td>$${item.total_price.toFixed(2)}</td>
                </tr>
            `;
        });
        
        html += '</tbody></table></div>';
    }
    
    if (order.tracking_number) {
        html += `<div class="alert alert-info mt-3">
            <strong>Tracking Number:</strong> ${order.tracking_number}
        </div>`;
    }
    
    document.getElementById('orderDetails').innerHTML = html;
}

document.addEventListener('DOMContentLoaded', loadOrderDetails);
</script>

<%- include('partials/footer') %>