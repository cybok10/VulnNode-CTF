<%- include('partials/header') %>

<div class="row align-items-center">
    <div class="col-md-6">
        <img src="<%= product.image %>" class="img-fluid rounded border border-secondary shadow" alt="<%= product.name %>">
    </div>
    <div class="col-md-6">
        <h1 class="text-primary"><%= product.name %></h1>
        <h3 class="text-white mb-4">$<%= product.price %></h3>
        <p class="lead text-muted"><%= product.description %></p>
        <hr class="border-secondary">
        
        <form action="/products/buy" method="POST">
            <input type="hidden" name="productId" value="<%= product.id %>">
            
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" class="form-control form-control-lg" name="quantity" id="quantity" value="1" min="1">
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Buy Now</button>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>